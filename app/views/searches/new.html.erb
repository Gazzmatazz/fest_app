<% provide(:title, 'Search Users') %>

<h1>Search Users</h1>

<div class="row">
  <div class="span6 offset3 forms_box">
  
   	<%= form_for @search do |f| %>

		<p>
		    <%= f.label :music %>
		    <%= f.text_field :music %>
		</p>
		<p>
		    <%= f.label :gender %>
		    <%= f.radio_button :gender, "Male" %> Male
	    	<%= f.radio_button :gender, "Female" %> Female
		</p>
		<p>
		    <%= f.label :city %>
		    <%= f.text_field :city %>
		</p>

  	    <%= f.submit "Search", class: "btn btn-large btn-primary" %>
  	    <%-# forward @search params to 'create' action in Searches controller -%>

	<% end %>

  </div>
</div>