<% @user ||= current_user %>
<%-# This only assigns a value to @user when @user is Nil -%>

<%-# A partial for displaying followers ststs -%>
<%-# the following/follower counts are calculated through the associations -%>

<div class="stats">

  <a href="<%= following_user_path(@user) %>">
    <strong id="following" class="stat">
      <%= @user.followed_users.count %>        
    </strong>
    following
  </a>

  <a href="<%= followers_user_path(@user) %>">
    <strong id="followers" class="stat">
      <%= @user.followers.count %>
    </strong>
    followers
  </a>

</div>